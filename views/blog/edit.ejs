<% include ../partials/header %>

<div class="row">
    <h1 style="text-align: center;">Edit "<%= blog.title %>"</h1>
    <div style="width: 50%; margin: 30px auto;">
        <form action="/blog/<%= blog._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <label for="title">Title</label>
                <input required class="form-control" type="text" name="blog[title]" value="<%= blog.title %>" placeholder="Blog Post Title">
            </div>
            <div class="form-group">
                <label for="image">Image</label>
                <input class="form-control" type="url" name="blog[image]" value="<%= blog.image %>" placeholder="image url">
            </div>
            <div class="form-group">
                <label for="content">Blog Post Content</label>
                <textarea required class="form-control" rows="10" name="blog[content]" placeholder="Write your post here...">
                    <%- blog.content %>
                </textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
        </form>
        <a href="/blog/<%= blog.id %>">Go Back</a>
    </div>
</div>

<% include ../partials/footer %>