<% include ./partials/header %>

<div class="row">
    <h1 style="text-align: center;">Reset Password</h1>
    <div style="width: 30%; margin: 30px auto;">
        <form action="/reset/<%= token %>" method="POST">
    	    <div class="form-group">
        	    <label for="password">New Password</label>
        	    <input required pattern=".{5,}" title="Password needs to be at least 5 characters long!" type="password" name="password" value="" placeholder="New password" autofocus class="form-control"/>
            </div>
    	    <div class="form-group">
    	        <label for="confirm">Confirm Password</label>
    	        <input required pattern=".{5,}" title="Password needs to be at least 5 characters long" type="password" name="confirm" value="" placeholder="Confirm password" class="form-control"/>
    	    </div>
    	    <div class="form-group">
    	        <button type="submit" class="btn btn-lg btn-primary btn-block">Update Password</button>
    	    </div>
        </form>
	</div>
	</h1>
</div>

<% include ./partials/footer %>