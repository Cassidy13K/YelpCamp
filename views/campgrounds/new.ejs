<% include ../partials/header %>

<div class="row">
    <h1 style="text-align: center;">Create a new campground</h1>
    <div style="width: 30%; margin: 30px auto;">
        <form action="/campgrounds" method="POST">
            <div class="form-group">
                <label for="name">Name</label>
                <input required class="form-control" type="text" name="name" placeholder="Cloud's Rest">
            </div>
            <div class="form-group">
                <label for="image">Image</label>
                <input required class="form-control" type="url" name="image" placeholder="image url">
            </div>
            <div class="form-group">
                <label for="price">Price per night</label>
                <input required class="form-control" type="number" name="price" placeholder="9.99" min="0.00" step="0.01">
            </div>
            <div class="form-group">
                <label for="location">Location</label>
                <input id="newSearch" required class="form-control" type="text" name="location" placeholder="Yosemite National Park, CA">
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <textarea class="form-control" rows="5" name="description" placeholder="further information & tips"></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
        </form>
        <a href="/campgrounds">Go Back</a>
    </div>
</div>

<script>
    function activatePlacesSearch() {
        let input = document.getElementById("newSearch");
        let autocomplete = new google.maps.places.Autocomplete(input);
    }
</script>
<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAgY52iScKYCAMMPrcBUhcYJQ1ozM4KUsM&libraries=places&callback=activatePlacesSearch"></script>

